<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gigya.socializer.api_key" type="string" />
        <parameter key="gigya.socializer.namespace" type="string">window</parameter>
        <parameter key="gigya.client.class">Buzz\Client\FileGetContents</parameter>
        <parameter key="gigya.client.message_factory.class">OpenSky\Bundle\GigyaBundle\Socializer\Buzz\MessageFactory</parameter>
    </parameters>

    <services>
        <service id="gigya.socializer" class="OpenSky\Bundle\GigyaBundle\Socializer\Socializer">
            <argument>%gigya.socializer.api_key%</argument>
            <argument type="service" id="gigya.client" />
            <argument type="service" id="gigya.client.message_factory" />
        </service>
        
        <service id="gigya.client" class="%gigya.client.class%" />
        
        <service id="gigya.client.message_factory" class="%gigya.client.message_factory.class%" />

        <service id="templating.helper.gigya_socializer" class="OpenSky\Bundle\GigyaBundle\Helper\SocializerHelper">
            <tag name="templating.helper" alias="gigya_socializer" />
            <argument type="service" id="gigya.socializer" />
            <argument>%gigya.socializer.namespace%</argument>
        </service>

        <service id="twig.extension.gigya_socializer" class="OpenSky\Bundle\GigyaBundle\Extension\SocializerExtension">
            <tag name="twig.extension" />
            <argument type="service" id="templating.helper.gigya_socializer" />
        </service>
    </services>

</container>
